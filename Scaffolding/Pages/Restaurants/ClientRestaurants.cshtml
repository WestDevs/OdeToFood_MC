  <script>

    $(function () {

      var cuisines = ["Unknown", "Mexican", "Italian", "Indian"];
      $.ajax("/api/restaurants/",
        { method: "get" })
        .then(function (response) {
          $("#restaurants").dataTable({
            data: response,
            columns: [
              { "data": "name" },
              { "data": "location" },
              {
                "data": "cuisine",
                "render": function (data) {
                  return cuisines[data];
                }
              }
            ]
          })
          console.dir(response);
        });
    });
  </script>
